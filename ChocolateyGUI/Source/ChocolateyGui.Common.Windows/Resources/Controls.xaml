    <Style x:Key="BackButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource BigIconButton}">
        <Setter Property="Content">
            <Setter.Value>
                <iconPacks:PackIconModern Kind="ChevronLeft" Width="18" Height="18" />
