@{
    Bundles.Reference("Content/dist/chocolatey.slim.css");
    Bundles.Reference("Scripts");
}


<section id="account" class="container py-3 py-md-5">
    <div class="row">
        <div class="col-sm-9 col-lg-6 m-auto">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-center">Thanks for reaching out!</h3>
                    <p class="text-center">Someone will be in touch shortly.</p>
                    <hr />
                    @TempData["Message"]
                    @if (Request.IsLocal)
                    {
                        <div class="callout-warning mt-3">
                            <p class="pl-3">Pssst! I see you're running this in a development environment. <strong>Check the <em>\App_Data\Mail</em> folder for the email</strong>.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
