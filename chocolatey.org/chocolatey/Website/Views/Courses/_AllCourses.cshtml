@using NuGetGallery;
@model CourseViewModel

<section id="additional-courses" class="py-3 py-lg-5">
    <div class="container">
        <h1 class="text-center mb-5">Additional Courses</h1>
        <div class="row">
            @*Getting Started with Chocolatey*@
            <div class="col-lg-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-dark pb-2">
                      @Html.Partial("~/Views/Courses/_LeftSideColumn.cshtml", new CourseLeftViewModel() {CourseNameType = CourseNameType.GettingStartedWithChocolatey, CourseModules = Model.CourseModules, UserCourseAchievements = Model.UserCourseAchievements})
                    </div>
                    <div class="card-body text-center">
                        <a class="h4 btn-link" href="@Url.RouteUrl(RouteName.CourseName, new {courseName = CourseConstants.GetCourseUrl(CourseNameType.GettingStartedWithChocolatey), courseModuleName = "home"})">@CourseConstants.GetCourseName(CourseNameType.GettingStartedWithChocolatey)</a>
                        <p class="text-muted">7 Topics | 1 Hour | <span class="level beginner">Beginner</span></p>
                        <hr />
                        <p class="text-left">In this course you will learn what exactly Chocolatey is and how it has helped thousands of companies and people just like you.</p>
                    </div>
                    <div class="card-footer text-center bg-white pt-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            foreach (var userCourseAchievement in Model.UserCourseAchievements)
                            {
                                if (userCourseAchievement.CourseKey == CourseConstants.GetCourseKey(CourseNameType.GettingStartedWithChocolatey) && userCourseAchievement.Completed)
                                {
                                    <a href="@Url.Action(MVC.Users.Profiles(Model.Username))" class="btn btn-success completed">See Badge<span class="fas fa-angle-right"></span></a>
                                }
                                else if (userCourseAchievement.CourseKey == CourseConstants.GetCourseKey(CourseNameType.GettingStartedWithChocolatey) && !userCourseAchievement.Completed)
                                {
                                    <a href="@Url.RouteUrl(RouteName.CourseName, new { courseName = CourseConstants.GetCourseUrl(CourseNameType.GettingStartedWithChocolatey), courseModuleName = "home" })" class="btn btn-success resume">Resume Course<span class="fas fa-angle-right"></span></a>
                                }
                            }
                        }
                        <a href="@Url.RouteUrl(RouteName.CourseName, new { courseName = CourseConstants.GetCourseUrl(CourseNameType.GettingStartedWithChocolatey), courseModuleName = "home" })" class="btn btn-primary start">Start Learning</a>
                    </div>
                </div>
            </div>
            @*Installing, Upgrading, and Uninstalling Chocolatey*@
            <div class="col-lg-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-dark pb-2">
                        @Html.Partial("~/Views/Courses/_LeftSideColumn.cshtml", new CourseLeftViewModel() {CourseNameType = CourseNameType.InstallingUpgradingUninstalling, CourseModules = Model.CourseModules, UserCourseAchievements = Model.UserCourseAchievements})
                    </div>
                    <div class="card-body text-center">
                        <a class="h4 btn-link" href="@Url.RouteUrl(RouteName.CourseName, new {courseName = CourseConstants.GetCourseUrl(CourseNameType.InstallingUpgradingUninstalling), courseModuleName = "home"})">@CourseConstants.GetCourseName(CourseNameType.InstallingUpgradingUninstalling)</a>
                        <p class="text-muted">3 Topics | < 30 Minutes | <span class="level beginner">Beginner</span></p>
                        <hr />
                        <p class="text-left">Chocolatey installs in just seconds! Learn how to get up and running with Chocolatey with a basic or more advanced install method.</p>
                    </div>
                    <div class="card-footer text-center bg-white pt-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            foreach (var userCourseAchievement in Model.UserCourseAchievements)
                            {
