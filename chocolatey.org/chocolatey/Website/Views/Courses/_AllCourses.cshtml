                        <hr />
                        <p class="text-left">Learn everything you need to know about creating your first Chocolatey Package.</p>
                    </div>
                    <div class="card-footer text-center bg-white pt-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            foreach (var userCourseAchievement in Model.UserCourseAchievements)
                            {
                                if (userCourseAchievement.CourseKey == CourseConstants.GetCourseKey(CourseNameType.CreatingChocolateyPackages) && userCourseAchievement.Completed)
                                {
                                    <a href="@Url.Action(MVC.Users.Profiles(Model.Username))" class="btn btn-success completed">See Badge<span class="fas fa-angle-right"></span></a>
                                }
                                else if (userCourseAchievement.CourseKey == CourseConstants.GetCourseKey(CourseNameType.CreatingChocolateyPackages) && !userCourseAchievement.Completed)
                                {
                                    <a href="@Url.RouteUrl(RouteName.CourseName, new { courseName = CourseConstants.GetCourseUrl(CourseNameType.CreatingChocolateyPackages), courseModuleName = "home" })" class="btn btn-success resume">Resume Course<span class="fas fa-angle-right"></span></a>
                                }
                            }
                        }
                        <a href="@Url.RouteUrl(RouteName.CourseName, new { courseName = CourseConstants.GetCourseUrl(CourseNameType.CreatingChocolateyPackages), courseModuleName = "home" })" class="btn btn-primary start">Start Learning</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>