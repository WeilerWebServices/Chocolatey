                                {
                                    <a href="@Url.RouteUrl(RouteName.CourseName, new { courseName = CourseConstants.GetCourseUrl(CourseNameType.InstallingUpgradingUninstalling), courseModuleName = "home" })" class="btn btn-success resume">Resume Course<span class="fas fa-angle-right"></span></a>
                                }
                            }
                        }
                        <a href="@Url.RouteUrl(RouteName.CourseName, new { courseName = CourseConstants.GetCourseUrl(CourseNameType.InstallingUpgradingUninstalling), courseModuleName = "home" })" class="btn btn-primary start">Start Learning</a>
                    </div>
                </div>
            </div>
            @*Creating Chocolatey Packages*@
            <div class="col-lg-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-dark pb-2">
                        @Html.Partial("~/Views/Courses/_LeftSideColumn.cshtml", new CourseLeftViewModel() { CourseNameType = CourseNameType.CreatingChocolateyPackages, CourseModules = Model.CourseModules, UserCourseAchievements = Model.UserCourseAchievements })
