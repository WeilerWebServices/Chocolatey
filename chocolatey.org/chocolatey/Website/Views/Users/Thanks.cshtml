@{
    Layout = "~/Views/Shared/MinimalLayout.cshtml";
    Bundles.Reference("Content/dist/chocolatey.slim.css");
    Bundles.Reference("Content/account.css");
    Bundles.Reference("Scripts");
    Bundles.Reference("Scripts/validation");
}

@if (!Request.IsAuthenticated)
{
    <h3 class="text-center">Thanks for Registering!</h3>
}
else
{
    <h3 class="text-center">You are all set!</h3>
}
@if (!Request.IsAuthenticated)
{
    <p><strong>But you're not done yet!</strong></p>
    if (Request.IsLocal)
    {
        <p>Pssst! I see you're running this in a development environment. <strong>Check the <em>\App_Data\Mail </em> folder for the email</strong></p>
    }
    else
    {
        <p>An email with instructions on how to activate your account is on its way to you. If you do not receive this email within 15 minutes, please check your junk folder. To ensure all emails reach your inbox, please add 'noreply@chocolatey.org' to your safe senders list.</p>
    }
}
else
{
    <p>It looks like you've already confirmed your account and are good to go.</p>
    <p>Click on the <em>Upload package</em> link in the menu to start uploading packages.</p>
}
<div class="text-center">
    <a class="btn btn-primary mx-auto mt-3" href="@Url.Action("Account")" title="Back to Account">Go to Account</a>
</div>